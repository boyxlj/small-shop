.collect {
  width: 100%;
  height: 100%;
  min-height: 100vh;
  background-color: #f1f3f5;
  overflow: hidden;
}
.collect .contents {
  width: 100%;
  min-height: 800rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 25rpx;
  margin-bottom: 20rpx;
}
.collect .contents .items {
  width: 100%;
  background-color: #fff;
  height: 420rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}
.collect .contents .items .list {
  width: 100%;
  height: 230rpx;
  display: flex;
  padding: 18rpx ;
  box-sizing: border-box;
  border-radius: 20rpx;
}
.collect .contents .items .list .left {
  width: 400rpx;
  height: 180rpx;
}
.collect .contents .items .list .left image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.collect .contents .items .list .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 15rpx;
}
.collect .contents .items .list .right .top {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  overflow: hidden;
  -webkit-box-orient: vertical;
}
.collect .contents .items .list .right .top .tag {
  background: linear-gradient(to right bottom, #9e2929, #d63c3c, #781818) !important;
  border-radius: 6rpx;
  padding: 0 6rpx;
  color: #fff;
  font-size: 24rpx;
  margin-right: 7rpx;
}
.collect .contents .items .list .right .bottom {
  font-size: 36rpx;
  color: red;
  display: flex;
  justify-content: space-between;
}
.collect .contents .items .list .right .bottom .nowPrice {
  color: #cf0a2c;
}
.collect .contents .items .list .right .bottom .prePrice {
  font-size: 28rpx;
  text-decoration: line-through;
  color: black;
}
.collect .contents .items .btns {
  display: flex;
  justify-content: space-between;
}
.collect .contents .empty {
  margin-top: 170rpx;
}
.collect .contents .likes {
  margin-top: 100rpx;
}
.collect .contents .likes .tip {
  width: 100%;
  text-align: center;
  margin: 8rpx 0 25rpx;
  background-image: linear-gradient(to right bottom, #f12121, #e434db, black, orange);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: 540;
  box-sizing: border-box;
  overflow: hidden;
}
