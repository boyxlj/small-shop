.login {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  padding-top: 180rpx;
}
.login .content .logo {
  width: 200rpx;
  height: 140rpx;
  font-size: 60rpx;
  line-height: 140rpx;
  text-align: center;
  margin: 0 auto;
  background-image: linear-gradient(to right bottom, #fc2323, #bd4646, #f30a0a, #ecbc20);
  font-weight: bold;
  -webkit-background-clip: text;
  color: transparent;
}
.login .content .form {
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  height: 280rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  box-shadow: 0 0 10rpx #ddd;
  border-radius: 15rpx;
}
.login .content .login-submit {
  margin-top: 50rpx;
}
