.category {
  display: flex;
  justify-content: space-between;
  height: 100vh;
  width: 100%;
  overflow: hidden !important;
}
.category .left {
  width: 20%;
  height: calc(100vh - 142px);
  position: fixed;
  top: 110rpx;
  background: #f7f8fa;
  left: 0;
  overflow-y: scroll !important;
  overflow-x: hidden;
}
.category .left .sidebar {
  height: 100%;
  overflow-y: scroll !important;
}
.category .right {
  width: 80%;
  height: calc(100vh - 142px);
  min-height: 400rpx;
  display: flex;
  position: fixed;
  left: 20%;
  top: 110rpx;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: flex-start;
  box-sizing: border-box;
  padding: 0 20rpx;
  overflow-y: scroll !important;
}
.category .right::after {
  content: '';
  width: 30%;
}
.category .right .empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70%;
  width: 100%;
}
.category .right .footer {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 25rpx;
  font-size: 26rpx;
}
.category .right .item {
  width: 30%;
  height: 214rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin: 25rpx 0 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
}
.category .right .item .tag {
  position: absolute;
  background: linear-gradient(to right bottom, #9e2929, #d63c3c, #781818) !important;
  border-radius: 6rpx;
  padding: 0 6rpx;
  color: #fff;
  font-size: 24rpx;
  margin-right: 7rpx;
  top: -24rpx;
  right: -8rpx;
}
.category .right .item image {
  width: 100%;
  height: 140rpx;
}
.category .right .item text {
  font-size: 22rpx;
  display: block;
  overflow: hidden;
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
  width: 130%;
}
